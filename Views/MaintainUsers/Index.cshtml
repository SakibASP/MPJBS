@using MPJBS.Models
@model List<MPJBS.ViewModels.UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>User Roles</h1>
<br />

<a href="/Identity/Account/Register" class="btn btn-info">Add User</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td>
                    <a class="btn btn-primary" asp-controller="MaintainUsers" asp-action="Manage" asp-route-userId="@user.UserId">Roles</a>
                    @* <a class="btn btn-danger" asp-controller="MaintainUsers" asp-action="DeleteUser" asp-route-userId="@user.UserId">Delete User</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>