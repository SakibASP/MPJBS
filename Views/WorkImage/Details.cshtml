@model MPJBS.Models.WorkHistory

@{
    ViewData["Title"] = "Details";
    var images = ViewData["Images"] as List<MPJBS.Models.WorkImage>;
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mentions)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mentions)
        </dd>
       
        <dd class="col-sm-10">
            @foreach (var i in images!)
            {
                if (i.ImagePath != null)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <img style="border-radius: 2px;" class="img-fluid" src="~/WorkImages/@i.ImageName" alt="@i.ImageName" />
                        </div>
                    </div>              
                }
                else
                {
                    <p> No image </p>
                }
            }
        </dd>
    </dl>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}